<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodApp.Pages.Register"
             Title="Registrace">
    <ScrollView>
        <VerticalStackLayout>
            
            
            <Label FontSize="20" HorizontalOptions="Center" Text="Username" TextColor="#fff" Margin="10" />
            <Border WidthRequest="250" HeightRequest="45" StrokeShape="RoundRectangle 10" Margin="10">
                <Entry IsPassword="False" Placeholder="Enter Your Username" />
            </Border>

            <Label FontSize="20" HorizontalOptions="Center" Text="Password" TextColor="#fff" Margin="10" />
            <Border WidthRequest="250" HeightRequest="45" StrokeShape="RoundRectangle 10" Margin="10">
                <Entry IsPassword="True" Placeholder="Enter Your Password" />
            </Border>

            <Border WidthRequest="175" HeightRequest="45" StrokeShape="RoundRectangle 10" Margin="10">
                <Button BackgroundColor="#ef4444" TextColor="#fff" Text="Register"></Button>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>